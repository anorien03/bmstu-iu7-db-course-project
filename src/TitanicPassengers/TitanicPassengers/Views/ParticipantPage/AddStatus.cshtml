@model AddStatusViewModel

<main class="form-signin w-50 m-auto mt-10">
    <button type="button" onclick="location.href='@Url.Action("GetParticipant", "ParticipantPage", new {id = Model.Id})'" class="btn btn-outline-secondary me-2">Back</button>
    <form method="post">
        <h3 class="h3 mb-3 fw-normal text-center">Please fill in the form</h3>

        <div class="form-group">
            <input asp-for="Status" type="radio" name="Status" value="@Status.Survived">
            <label for="Status">Survived</label><br>
            <input asp-for="Status" type="radio" name="Status" value="@Status.Victim">
            <label for="Status">Victim</label><br>

            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LifeboatId" class="control-label">Lifeboat number</label>
            <input asp-for="LifeboatId" class="form-control" id="floatingInput" type="text" />
            <span asp-validation-for="LifeboatId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="BodyId" class="control-label">Body number (only for victims)</label>
            <input asp-for="BodyId" class="form-control" type="text" />
            <span asp-validation-for="BodyId" class="text-danger"></span>
        </div>


        <div class="form-group text-center">
            <input type="submit" value="Add" class="btn btn-primary" />

        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    </form>
</main>

